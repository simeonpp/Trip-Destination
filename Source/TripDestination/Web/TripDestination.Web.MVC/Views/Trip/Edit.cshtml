@model TripEditInputModel

@{
    ViewBag.Title = "Trip edit";
}

<div id="tripEdit">

    <section id="topHead" class="noTopMargin noBottomMargin">
        @Html.Partial("_TopSectionPartial", new ViewDataDictionary {
            { "From", Model.FromTownName },
            { "To", Model.ToTownName },
            { "FortammetDateOfLeaving", Model.FormattedDateOfLeaving }
        })
    </section>

    <div class="wrapper row">

        <div class="col-md-8">
            <section id="editTripSection">
                <h1>Edit trip details</h1>
                <h2>Not saved information</h2>
                <article>
                    @using (Html.BeginForm("Edit", "Trip", FormMethod.Post, new { id = "editTripFrom" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()

                        @Html.EditorForModel()
                    }
                </article>

            </section>
        </div>

        <div class="col-md-4">
            <section>
                @Html.Action("UserStatistics", "ProfileChildAction", new { area = "UserProfile", userId = Model.DriverId })
            </section>
        </div>

    </div>

</div>

@section styles {
    @Styles.Render("~/Content/datetimepicker-css")
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datetimepicker")
    @Scripts.Render("~/bundles/trip-edit")
}
