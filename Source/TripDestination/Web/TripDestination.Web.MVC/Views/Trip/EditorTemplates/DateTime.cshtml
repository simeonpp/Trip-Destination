@model DateTime

@{ 
    string identifier = this.ViewData.TemplateInfo.HtmlFieldPrefix;
    string selectedDate = (string)this.ViewData["selectedDate"];

    if (selectedDate == null)
    {
        selectedDate = DateTime.Now.ToString("yyyy-MM-dd");
    }
}

@Html.LabelFor(m => m, new { @class = "col-lg12 control-labe" })
<div class="col-lg-12" style="margin-bottom: 6px">
    <div class='input-group date customDateTimePickers'>
        <input type='text' class="form-control" style="margin-bottom:0" name="@identifier" id="@identifier" data-date="@selectedDate" />
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
    </div>
</div>