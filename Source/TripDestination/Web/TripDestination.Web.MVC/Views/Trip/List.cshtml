@model TripLstViewModel

<div id="tripList">

    <section class="noTopMargin noBottomMargin">
        <article id="filterArticleWrap" class="redBG noPadding noMargin">
            <div class="wrapper row">

                <div class="col-md-4">
                    <div id="tripDateCalendarWrap">
                        <div id="dateWrap">
                            <div id="currentDay">@Model.Date.Day</div>
                            <div id="currentMonth">@Model.Date.DayOfWeek.ToString().Substring(0, 2)</div>
                            <div id="foundTripsCount">@Model.Trips.Count() active trips</div>
                        </div>

                        <!-- Fixed size -->
                        <div id="weekDaysWrap">
                            <ul class="weekDaysUl">
                                @foreach (var date in Model.WeekDays)
                                {
                                    <li>
                                        <a href="#" @if (date.IsActive) { <text> class="active" </text>     }>
                                            @date.Datetime.ToString().Substring(0, 2)
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">

                    @using (Html.BeginForm("Search", "Trip", FormMethod.Get, new { id = "tripFilterForm" }))
                    {
                        <div class="row">

                            <div class="col-md-6">
                                @Html.EditorFor(m => m.SearchInputModel.FromId, "CustomDropDownList", new { selectListItems = Model.TownsSelectList })

                                <div class="row">
                                    <div class="col-md-6">
                                        @Html.EditorFor(m => m.SearchInputModel.Passengers, "CustomDropDownList", new { selectListItems = Model.AvailableSeatsSelectList })
                                    </div>
                                    <div class="col-md-6">
                                        @Html.EditorFor(m => m.SearchInputModel.DateOfLeaving)
                                    </div>
                                </div>

                                @Html.EditorFor(m => m.SearchInputModel.DriverName)
                            </div>

                            <div class="col-md-6">
                                @Html.EditorFor(m => m.SearchInputModel.ToId, "CustomDropDownList", new { selectListItems = Model.TownsSelectList })

                                <div class="row">
                                    <div class="col-md-6">
                                        @Html.EditorFor(m => m.SearchInputModel.LuggageSpcace, "CustomDropDownList", new { selectListItems = Model.LuggageSpcaceSelectList })
                                    </div>
                                    <div class="col-md-6">
                                        @Html.EditorFor(m => m.SearchInputModel.ItemsPerPage, "CustomDropDownList", new { selectListItems = Model.ItemPerPageSelectList })
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <label for="priceMin" class="col-lg-12 control-label">Price range</label>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(m => m.SearchInputModel.MinPrice, new { @type = "number", @Value = "0", @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="col-lg-12">
                                            @Html.TextBoxFor(m => m.SearchInputModel.MinPrice, new { @type = "number", @Value = "50", @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div id="filterButtonWrap" class="row">
                            <div class="col-md-3 pull-right">
                                <input class="button2 col-lg-12" type="submit" value="Filter">
                            </div>
                        </div>
                    }

                </div>

            </div>
        </article>
    </section>

</div>


