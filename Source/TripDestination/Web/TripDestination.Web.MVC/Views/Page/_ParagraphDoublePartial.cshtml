@using TripDestination.Web.MVC.ViewModels.Page
@model PageParagraphViewModel

<article class="centered">
    <div class="wrapper row">
        <h3>@Model.Heading</h3>
        <p>@Html.Raw(Model.Text)</p>
    </div>
</article>

<article>
    <div class="wrapper row">
        <div class="col-md-6">
            <h3>@Model.Heading</h3>
            @Model.Text
        </div>

        <div class="col-md-6">
            <h3>@Model.AdditionalHeading</h3>
            <p>@Html.Raw(Model.AdditionalText)</p>
        </div>
    </div>
</article>