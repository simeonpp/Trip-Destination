        <div class="col-md-6">
            <h3>@Model.Heading</h3>
            @Html.Raw(Model.TextSanitized)
        </div>

        <div class="col-md-6">
            <h3>@Model.AdditionalHeading</h3>
            <p>@Html.Raw(Model.AdditionalTextSanitized)</p>
        </div>
    </div>
</article>