@model HomepageViewModel

<div id="leftCoverWrap">
    <div id="innerWrap">
        <div id="logo"></div>
        <div class="clear"></div>
        <div id="topDestinationsWrap">
            <ul id="topDestinationWrap">
                @foreach (var tupleDestinations in Model.TopDestinations)
                {
                    <li class="topDestinationLi" data-from="@tupleDestinations.FromTown" , data-to="@tupleDestinations.ToTown">
                        <div class="imgAndTextWrap">
                            <div class="icon"></div>
                            <div class="destinationsName">@tupleDestinations.FromTown - @tupleDestinations.ToTown</div>
                        </div>
                        <div class="radioButtonWrap">
                            <div class="circleBoxActive"></div>
                        </div>
                    </li>
                }
            </ul>
        </div> <!-- end #topDestinationWrap -->
        <div class="clear"></div>
        <div id="socialLinksWrap">
            <div id="linkWrap">
                <ul>
                    <li>
                        <a href="https://www.facebook.com" target="_blank">
                            <img src="images/facebook-circle-icon.png" alt="Facebook circle icon">
                        </a>
                    </li>
                    <li>
                        <a href="https://twitter.com/?lang=en" target="_blank">
                            <img src="images/twitter-circle-icon.png" alt="Twitter circle icon">
                        </a>
                    </li>
                    <li>
                        <a href="https://plus.google.com/" target="_blank">
                            <img src="images/google-plus-circle-icon.png" alt="Google plus circle icon">
                        </a>
                    </li>
                    <li>
                        <a href="https://www.youtube.com/" target="_blank">
                            <img src="images/youtube-circle-icon.png" alt="Youtube circle icon">
                        </a>
                    </li>
                </ul>
            </div> <!-- end #linkWrap -->
            <div class="copyrightWrap">
                <p>© 2016 | Simeon Petkov</p>
                <p>All Rights Reserved.</p>
            </div>
        </div> <!-- end #socialLinksWrap -->
    </div> <!-- end #innerWrap -->
</div> <!-- end #leftCoverWrap -->

<div id="rightCoverWrap">
    <div id="coverQuickSearchWrap">
        @using (Html.BeginForm("Search", "Trip", FormMethod.Get, new { id = "tripQuickForm" }))
        {
            <input type="text" id="Sort" name="Sort" class="hiddenInput" />
            <input type="text" id="OrderBy" name="OrderBy" class="hiddenInput" />

            <div class="form-group">
                @Html.EditorFor(m => m.FromId, "CustomDropDownList", new { selectListItems = Model.TownsSelectList })
            </div>

            <div class="form-group">
                @Html.EditorFor(m => m.ToId, "CustomDropDownList", new { selectListItems = Model.TownsSelectList })
            </div>

            <div class="form-group">
                @Html.EditorFor(m => m.DateOfLeaving)
            </div>

            @Html.TextBoxFor(m => m.DriverName, new { @Value = "", @class = "hiddenInput" })
            @Html.TextBoxFor(m => m.Passengers, new { @Value = "1", @class = "hiddenInput" })
            @Html.TextBoxFor(m => m.ItemsPerPage, new { @Value = "9", @class = "hiddenInput" })
            @Html.TextBoxFor(m => m.MinPrice, new { @Value = "0", @class = "hiddenInput" })
            @Html.TextBoxFor(m => m.MaxPrice, new { @Value = "50", @class = "hiddenInput" })

            <div class="form-group">
                <div class='col-lg-12'>
                    <button>Seach</button>
                </div>  
            </div>
        }            
    </div> <!-- end #quickSearchWrap -->
</div> <!-- end #coverQuickSearchWrap -->

<div id="hint-arrow">
    <a href="#">
        <img src="images/hint-arrow.png" alt="Down arrow">
    </a>
</div>