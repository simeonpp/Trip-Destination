@model DateTime

<div class="col-lg-12">
    @Html.LabelFor(m => m, new { @class = "col-lg12 control-labe" })
    <div class='customDateTimePickers input-group date'>
        @Html.TextBoxFor(m => m, new { @type = "datetime", @class = "form-control" })
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
    </div>        
</div>