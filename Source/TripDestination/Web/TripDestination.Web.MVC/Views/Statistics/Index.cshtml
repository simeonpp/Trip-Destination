@using TripDestination.Web.MVC.ViewModels.Statistics
@model StatisticsViewModel

@{
    ViewBag.Title = "Statistics";
}

<div id="statistics">

    <section>
        <h1>General statistics</h1>
        <h2>Main website statistics</h2>
        <article>
            <div class="wrapper row">
                <ul class="statsUl">
                    <li class="col-md-2">
                        <div class="description">Trips count</div>
                        <div class="icon"><img src="~/Assets/images/trips-icon.png" alt="Add icon"></div>
                        <div class="actualInfo">@Model.TripsCount</div>
                    </li>
                    <li class="col-md-2">
                        <div class="description">Top destination</div>
                        <div class="icon"><img src="~/Assets/images/destination-icon.png" alt="Road icon"></div>
                        <div class="actualInfo">@Model.TopDestination</div>
                    </li>
                    <li class="col-md-2">
                        <div class="description">Passengers count</div>
                        <div class="icon"><img src="~/Assets/images/passenger-icon.png" alt="Users icon"></div>
                        <div class="actualInfo">@Model.UsersCount</div>
                    </li>
                    <li class="col-md-2">
                        <div class="description">Drivers count</div>
                        <div class="icon"><img src="~/Assets/images/driver-icon.png" alt="Driver icon"></div>
                        <div class="actualInfo">@Model.DriversCount</div>
                    </li>
                    <li class="col-md-2">
                        <div class="description">Average trip rating</div>
                        <div class="icon"><img src="~/Assets/images/star-icon.png" alt="Star icon"></div>
                        <div class="actualInfo">@Model.AverageTripRating</div>
                    </li>
                    <li class="col-md-2">
                        <div class="description">Trip views</div>
                        <div class="icon"><img src="~/Assets/images/view-icon.png" alt="View icon"></div>
                        <div class="actualInfo">@Model.TripViews</div>
                    </li>
                </ul>
            </div>
        </article>
    </section>

    <section id="todayStatsWrap">
        <h1>Today's statistics</h1>
        <h2>Trip statistics for today</h2>
        <article>
            <div class="wrapper row">
                <div class="col-md-8 col-md-offset-2">
                    @Html.Action("TodaysStats", "StatisticsChildAction", new { itemsPerRow = 4 })
                </div>
            </div>
        </article>
    </section>

</div>


