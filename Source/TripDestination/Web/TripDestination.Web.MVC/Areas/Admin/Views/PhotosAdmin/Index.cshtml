<div class="adminKendoTableWrap">

    <h1>Photo administration</h1>

    @(Html.Kendo().Grid<TripDestination.Web.MVC.Areas.Admin.ViewModels.PhotosAdminViewModel>()
          .Name("grid")
          .Columns(columns =>
          {
              columns.Bound(c => c.Id);
              columns.Bound(c => c.ContentType);
              columns.Bound(c => c.FileName);
              columns.Bound(c => c.OriginalName);
              columns.Bound(c => c.SizeInBytes);
              columns.Bound(c => c.CreatedOn).Format("{0:yyyy-MM-dd HH:mm}");
          })
          .Editable(editable => editable.Mode(GridEditMode.PopUp))
          .Pageable()
          .Sortable(sortable =>
          {
              sortable.SortMode(GridSortMode.SingleColumn);
          })
          .Filterable()
          .Scrollable(scr => scr.Height(650))
          .DataSource(dataSource => dataSource
              .Ajax()
              .Model(model => model.Id(p => p.Id))
              .Read(read => read.Action("Photo_Read", "PhotosAdmin"))
          )
    )

</div>
