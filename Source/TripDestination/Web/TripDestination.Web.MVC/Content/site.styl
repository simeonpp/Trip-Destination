//=============================
// RATING
//=============================
.rating, .adjustableRating
  margin 0
  padding 0
  border none
  float left

  > input
    display none

  > label
    color #ddd
    float right

    &:before
      margin 5px
      font-size 1.25em
      font-family FontAwesome
      display inline-block
      content "\f005"

.rating > input:checked ~ label /* show gold star when clicked */
  color: #FFD700

.adjustableRating > input:checked ~ label, /* show gold star when clicked */
.adjustableRating:not(:checked) > label:hover, /* hover current star */
.adjustableRating:not(:checked) > label:hover ~ label { color: #FFD700;  } /* hover previous stars in list */

.adjustableRating > input:checked + label:hover, /* hover current star when changing rating */
.adjustableRating > input:checked ~ label:hover,
