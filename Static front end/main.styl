@require  'kiddolb.styl'

body, html
  height: 100%;
  margin: 0
  padding: 0

html, body
  background #f3f4ee !important
  font-family "Times New Roman" !important
  font-size 14px !important
  color black !important

defaultWidth = 1024px;

//=============================
// Default
//=============================
.wrapper
  width defaultWidth !important
  margin 0 auto !important
  padding 0 !important
  @extends .boxSizing

.clear
  clear both

section
  width 100% !important
  margin 35px 0 55px !important

section.noTopMargin
  margin-top 0px !important

section.noBottomMargin
  margin-bottom 0px !important

article
  width 100% !important
  background white !important
  padding 15px 15px !important
  @extends .boxSizing
  margin 20px 0 !important

article.centered
  text-align center

article.bigPadding
  padding 50px 15px !important

article.noLeftAndRightPadding
  padding-left 0 !important
  padding-right 0 !important

h1
  width 100% !important
  display block !important
  text-align center !important
  color black !important
  text-transform uppercase !important
  font-size 2rem !important
  margin 5px 0 !important
  font-weight bold !important

h2
  width 100% !important
  display block !important
  text-align center !important
  font-size 1.2rem !important
  color #bdbdbd !important
  margin 0 !important
  text-transform none !important

h3
  font-size 1.5rem !important
  text-transform uppercase
  margin-bottom 20px !important

.baseButton
  border-width 1px
  border-style solid
  text-transform none
  padding 7px 60px
  border-radius 4px
  transition(300ms)

.button
  border-color #aa152b
  background #aa152b
  color white
  @extends .baseButton

  &:hover
    background-color white
    color #aa152b

.button2
  border-color #aa152b
  background #ffffff
  color #aa152b
  @extends .baseButton

  &:hover
    background-color #aa152b
    color white

.centeredBlockText
  width 100%
  display block
  text-align center

a
  text-decoration none
  color #aa152b !important

//=============================
// COVER WRAP
//=============================
#coverWrap
  width 100%
  height: 100%
  background-size: cover
  background-attachment: fixed
  background-image url("../images/cover-bg.png")
  background-repeat: no-repeat
  background-position: top center
  overflow hidden

  #leftCoverWrap
    width 50%
    height: 100%
    float left
    //background greenyellow
    overflow hidden

    #innerWrap
      width 220px
      height 88%
      margin-top 12%
      margin-right 30px
      float right
      position relative
      //background blue

      #logo
        width 111px
        height 56px
        margin 0 auto
        background url("../images/logo-small.png")

      #topDestinationsWrap
        width 200px
        margin-top 100px
        float right

        ul#topDestinationWrap
          width 100%
          margin 0
          padding 0
          list-style none

          li
            width 100%
            display table
            margin-bottom 30px

            &:last-child
              margin-bottom 0

            a
              width 100%
              display table
              text-decoration none

              &:hover .radioButtonWrap .circleBox
                background url("../images/cover-circle-active.png")

              .imgAndTextWrap
                display table-cell

                .icon
                  width 23px
                  height 21px
                  margin 0 auto
                  display block
                  background url("../images/person-icon.png")

                .destinationsName
                  width 100%
                  margin-top 5px
                  display block
                  color white
                  text-align center
                  font-weight bold
                  text-transform uppercase

              .radioButtonWrap
                width 20px
                padding 0 0 0 15px
                display table-cell
                vertical-align middle

                .circleBox
                  width 20px
                  height 20px
                  background url("../images/cover-circle.png")

                .circleBoxActive
                  width 20px
                  height 20px
                  background url("../images/cover-circle-active.png")

      #socialLinksWrap
        width 100%
        position absolute
        bottom 100px

        #linkWrap
          ul
            margin 0
            padding 0
            list-style-type none
            overflow hidden

            li
              float left
              margin-right 17px

              &:last-child
                margin-right 0

              a
                width 42px
                height 42px
                display block

                img
                  width 100%

        .copyrightWrap
          width 100%
          margin-top 15px
          text-align center
          color white

          p
            margin -5px 0 0

  #rightCoverWrap
    width 50%
    height 100%
    //background mediumvioletred
    float left

  #coverQuickSearchWrap
    width 400px
    margin 12% 0 0 30px
    padding 30px
    background rgba(255, 255, 255, 0.7)
    border-radius 20px

    label
      font-size 1.4rem

    input
      padding-top 20px
      padding-bottom 20px
      border-radius 5px

    button
      @extends .button

  #hint-arrow
    width: 60px
    height: 60px
    position: absolute
    left: 48.2%
    bottom: 50px
    animation scrolling 2.2s ease-in-out infinite
    -webkit-animation scrolling 2.2s ease-in-out infinite
    -moz-animation scrolling 2.2s ease-in-out infinite
    cursor: pointer
    opacity: 0.8

    img
      width 100%

  @keyframes scrolling {
    0% {
      bottom: 50px;
    }

    50% {
      bottom: 20px;
    }

    100% {
      bottom: 50px;
    }
  }


.cd-scrolling-bg
  width 100%
  margin: 0 auto

//=============================
// COMMON
//=============================
.noMargins
  margin-right 0 !important
  margin-left 0 !important

// Triplist
ul.tripsList
  @extends .ulClear
  @extends .clearFix

  li
    width 48%
    margin 0 4% 4% 0
    padding 1.5% 1.5% 3% 1.5%
    float left
    background white
    @extends .boxSizing

    &:nth-child(2n)
      margin-right 0

    a
      text-decoration none
      color black

      .image
        width 100%
        display block
        margin-bottom 5px
        height 275px
        background-size cover
        background-repeat no-repeat
        background-position top center

      .direction
        text-transform uppercase
        font-weight bold
        color #aa152b
        @extends .centeredBlockText

      .timeOfLeaving
        margin-top -5px
        @extends .centeredBlockText

      .driver
        margin-top -5px
        color #bdbdbd
        text-transform uppercase
        @extends .centeredBlockText

      .infoInIconsWrap
        margin-top 15px
        @extends .clearFix

        .infoIconWrap
          width 23.5%
          float left
          margin-right 2%

          &:nth-child(4n)
            margin-right 0

          .actualInfo
            color #aa152b
            font-weight bold
            font-size 1.5rem
            @extends .centeredBlockText

          .icon
            width 100%
            display block
            margin 5px 0

            img
              width 100%
              max-width 33px
              margin 0 auto

          .description
            color #bdbdbd
            font-weight bold
            font-size 0.8rem
            line-height 0.8rem
            text-transform uppercase
            @extends .centeredBlockText

// Rating
ul.ratingUl
  @extends .ulClear
  @extends .clearFix

  li
    float left
    margin-right 3px !important

    &:last-child
      margin-right 0 !important

    img
      width 25px

// Stats
ul.statsUl
  @extends .ulClear
  @extend .clearFix

  li
    .description
      color #bdbdbd
      text-transform uppercase
      @extends .centeredBlockText

    .icon
      width 100%

      img
        width 100%
        max-width 80px
        margin 10px auto

    .actualInfo
      font-size 1.5rem
      @extends .centeredBlockText

// Info
ul.infoUl
  @extends .ulClear

  li
    width 100%
    display block
    border 1px solid #dfdfdf
    border-right 0
    border-left 0
    padding 10px 20px

    .labelInfo
      color #bdbdbd

    .textInfo
      color black
      margin-top -1px
      font-size 1.2rem
      line-height 1.3rem

// Comment
ul.commentsUl
  @extends .ulClear

  li
    width 100%
    display block
    margin 20px 0
    @extends .clearFix

    &:first-child
      margin-top 0

    &:last-child
      margin-bottom 0

    .image
      width 75px
      height @width
      margin-top 5px
      border-radius 50%
      background-size: cover
      background-repeat: no-repeat
      background-position: top center

    .commentTextWrap
      background #f7f7f7
      padding 10px 15px
      border-radius 6px
      position relative

      .arrow
        width 12px
        height 22px
        position absolute
        left -@width + 1
        background-image: url('../images/comment-arrow.png');
        background-size: cover
        background-repeat: no-repeat
        background-position: top center

      .names
        font-size 1.2rem

        a
          color black !important

          .lastName
            color #aa152b
            text-transform uppercase
            font-weight bold

      .date
        color #bdbdbd
        margin-top -5px

      .commentText
        margin-top 15px
        font-style italic

// Car images
ul.carImagesUl
  width 100%
  @extends .ulClear

  li
    width 100%
    display block
    margin-bottom 20px

    img
      width 100%

    &:last-child
      margin-bottom 0

//=============================
// NAVIGATION
//=============================
.navbar
  margin-bottom 0px !important

.navbar-default
  background-color #dfdfdf !important
  border none

  .navbar-nav
    li
      border-bottom 2px solid #dfdfdf

      a
        @extends .centeredBlockText
        color black !important
        text-transform uppercase
        font-size 1.4rem
        padding 30px 15px 22px

        .clarification
          @extends .centeredBlockText
          color #bdbdbd
          font-size 1rem
          text-transform none

      &:hover
        background-color #E7E7E7
        border-bottom-color #E7E7E7

    li.active
      border-bottom-color black
      a
        background-color #dfdfdf

@media (min-width: 1200px)
  .container
    width: defaultWidth !important


//=============================
// HOMEPAGE
//=============================
#welcomeMessageWrap
  h1
    text-transform none !important
    border 1px solid black
    border-left none
    border-right none
    padding 5px
    margin 10px 0 15pxs 0 !important

  p
    color #bdbdbd
    text-align center

.homeTripsList
  .infoText
    padding-left 0 !important
    padding-right 40px !important
    @extends .boxSizing

    h1
      text-align left !important

    h2
      text-align left !important

//=============================
// TRIP CREATE
//=============================
#tripCreate

  ul.statsUl
    li
      margin-bottom 35px

  form#tripCreateForm
    .col-lg-12
      padding-left 0 !important
      padding-right 0 !important

    textarea
      max-width 100%

//=============================
// STATISTICS
//=============================
#statistics
  width 100%

  ul
    @extends .ulClear
    @extends .clearFix

  #topUsers
    ul.topUsersUl
      li
        padding 5px 0 0
        margin-bottom 17px
        border-radius(7px)
        transition(200ms)

        &:last-child
          margin-bottom 0

        &:hover
          background #EFEFEF

        a
          color black

        .image
          width 70px
          height 70px
          border-radius(12px)
          background-size: cover
          background-repeat: no-repeat
          background-position: top center

          img
            width 100%

        .driverName
          font-size 1.3rem
          font-weight bold
          margin-bottom 5px

        .tripsText
          text-transform uppercase
          color #bdbdbd
          @extends .centeredBlockText

        .tripsCount
          font-size 2rem
          color black
          @extends .centeredBlockText

//=============================
// FAQ
//=============================
#faq

  .faqQuestionNumber
    color #bdbdbd

  .feqQuqestion
    font-size 1.3rem
    font-weight bold
    text-transform uppercase
    color #aa152b
    margin-bottom 25px

  p
    margin 25px 0

//=============================
// CONTACT
//=============================
#contact

  .socialTextImage
    img
      width 100%

  #contactFormWrap
    legend
      text-transform uppercase

//=============================
// MY PROFILE
//=============================
#topInfoProfile
  padding 15px 0 0

  .image
    width 100%

    .imageContainer
      width 70px
      height 70px
      border-radius(12px)
      background-size: cover
      background-repeat: no-repeat
      background-position: top center

  .name
    font-weight bold
    font-size 1.3rem

  .role
    color #bdbdbd

#myProfile

  ul.statsUl
    li
      margin-bottom 35px

// Trips list
table.tripsTable
  .date
    //width 150px

  .totalPeople
    width 100px

  .rating
    width 105px

    ul.ratingUl
      li
        img
          width 15px

  .status
    width 100px

  .center
    text-align center

  .status
    font-weight bold

  .statusFinished
    color green

  .statusInProgress
    color red

  .statusOpen
    color orange

  .statusReadyToGo
    color blue

//=============================
// PAGE 404
//=============================
#page404

  .image
    img
      width 100%

//=============================
// FOOTER
//=============================
footer
  background #252525

  #topFooterWrap
    background #333333
    padding 15px 0

    ul
      @extends .ulClear

      li
        width 25px
        float left
        margin-right 4px

        &:last-child
          margin-right 0

        img
          width 100%

    #newsletterWrap
      color white
      text-transform uppercase
      @extends .clearFix

      #text
        float right
        padding 4px 0

      #newsletterEmailInputWrap
        width 250px
        float right
        margin-left 12px

        #newsletterEmailInput
          width 100%
          padding 3px 10px
          background #444444
          border 1px solid #444444

      #newsletterButton
        float right
        margin-left 12px
        padding 3px 10px
        border 1px solid white
        text-align center
        cursor pointer
        @extends .boxSizing

  #footerWrap
    padding 35px 0
    background #252525
    color white

    #navigationLinks
      @extends .clearFix

      ul
        float left
        margin 0 10% 0 0
        @extends .ulClear

        li
          margin-bottom 7px

          &:nth-child(1)
            color white
            text-transform uppercase
            margin-bottom 20px

          a
            color #808080 !important


    #copyrightText
      width 100%
      text-align right
      color #808080

      p
        margin 0
        padding 0

    #logoFooterWrap
      width 250px
      margin-top 50px
      float right

      img
        width 100%

